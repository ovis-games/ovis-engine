{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "VM.VariableDeclarationStatement",
  "title": "VariableDeclarationStatement",
  "description": "A statement that declares a new variable",
  "type": "object",
  "properties": {
    "statementType": "variable_declaration",
    "variableName": { "$ref": "VM.VariableName.schema.json" },
    "variableType": { "$ref": "VM.TypeReference.schema.json" },
    "value": { "$ref": "VM.Expression.schema.json" }
  },
  "additionalProperties": false,
  "required": [ "statementType", "variableName", "variableType" ]
}
