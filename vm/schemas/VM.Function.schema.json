{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "VM.Function",
  "title": "Function",
  "description": "Describes a function of the virtual machine",
  "type": "object",
  "properties": {
    "name": { "$ref": "VM.VariableName.schema.json" },
    "definitionType": "function",
    "inputs": {
      "type": "array",
      "items": { "$ref": "VM.VariableDeclaration.schema.json" }
    },
    "outputs": {
      "type": "array",
      "items": { "$ref": "VM.VariableDeclaration.schema.json" }
    },
    "statements": {
      "type": "array",
      "items": { "$ref": "VM.Statement.schema.json" }
    }
  },
  "additionalProperties": false,
  "required": ["name", "definitionType", "inputs", "outputs", "statements"]
}
