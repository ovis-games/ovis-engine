{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "VM.FunctionCallStatement",
  "title": "FunctionCallStatement",
  "description": "An statement calls a function.",
  "type": "object",
  "properties": {
    "statementType": "function_call",
    "function": {
      "$ref": "VM.FunctionReference.schema.json"
    },
    "inputs": {
      "type": "object",
      "additionalProperties": {
        "$ref": "VM.Expression.schema.json"
      }
    }
  },
  "additionalProperties": false,
  "required": ["statementType"]
}
