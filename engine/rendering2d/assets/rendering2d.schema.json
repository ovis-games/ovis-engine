{
  "$schema": "http://json-schema.org/draft/2019-09/schema#",

  "$defs": {
    "sprite": {
      "title": "Sprite",
      "type": "object",
      "description": "Represents a 2D object in a scene.",
      "properties": {
        "Color": {
          "$ref": "core#/$defs/color",
          "description": "The color of the sprite."
        },
        "Texture": {
          "type": "asset<texture2d>",
          "description": "A texture that will be displayed on the sprite."
        },
        "Size": {
          "$ref": "core#/$defs/vector2",
          "description": "The size of the sprite.",
          "default": [100, 100]
        }
      }
    }
  }
}