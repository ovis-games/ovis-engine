{
  "$schema": "http://json-schema.org/draft/2019-09/schema#",

  "$defs": {
    "vector2": {
      "title": "Vector2",
      "description": "A two-dimensional vector.",
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": {
        "type": "number"
      },
      "default": [0, 0]
    },
    "vector3": {
      "title": "Vector3",
      "description": "A three-dimensional vector.",
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "items": {
        "type": "number"
      },
      "default": [0, 0, 0]
    },
    "vector4": {
      "title": "Vector4",
      "description": "A four-dimensional vector.",
      "type": "array",
      "minItems": 4,
      "maxItems": 4,
      "items": {
        "type": "number"
      },
      "default": [0, 0, 0, 0]
    },
    "color": {
      "title": "color",
      "description": "RGBA color.",
      "type": "array",
      "minItems": 4,
      "maxItems": 4,
      "items": {
        "type": "number"
      },
      "default": [1, 1, 1, 1]
    },
    "transform": {
      "title": "Transform",
      "type": "object",
      "description": "Represents the transformation of an object in a 3D space.",
      "properties": {
        "position": {
          "$ref": "core#/$defs/vector3",
          "title": "Position",
          "description": "The position of the object."
        },
        "rotation": {
          "$ref": "core#/$defs/vector3",
          "title": "Rotation",
          "description": "The rotation of the object in degree."
        },
        "scale": {
          "$ref": "core#/$defs/vector3",
          "title": "Scale",
          "description": "The scaling of the object."
        }
      }
    }
  }
}